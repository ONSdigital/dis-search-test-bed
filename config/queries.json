[
  {
    "name": "bm25_default",
    "description": "Standard BM25 algorithm with default parameters",
    "queries": [
      {
        "query": "golang concurrency best practices",
        "description": "Multi-word query testing relevance ranking",
        "es_query": {
          "query": {
            "multi_match": {
              "query": "golang concurrency best practices",
              "fields": ["title^2", "body"],
              "type": "best_fields",
              "operator": "or"
            }
          },
          "size": 20
        }
      },
      {
        "query": "testing",
        "description": "Single word query with high recall",
        "es_query": {
          "query": {
            "match": {
              "body": {
                "query": "testing",
                "fuzziness": "AUTO"
              }
            }
          },
          "size": 20
        }
      }
    ]
  },
  {
    "name": "title_boost",
    "description": "Aggressive title field weighting for title-focused search",
    "queries": [
      {
        "query": "golang concurrency best practices",
        "description": "Multi-word query with heavy title emphasis",
        "es_query": {
          "query": {
            "multi_match": {
              "query": "golang concurrency best practices",
              "fields": [
                "title^5",
                "title.keyword^10",
                "body^1"
              ],
              "type": "best_fields",
              "operator": "or"
            }
          },
          "size": 20
        }
      },
      {
        "query": "testing",
        "description": "Title-focused ranking for single term",
        "es_query": {
          "query": {
            "multi_match": {
              "query": "testing",
              "fields": [
                "title^5",
                "title.keyword^10",
                "body^1"
              ],
              "type": "best_fields"
            }
          },
          "size": 20
        }
      }
    ]
  },
  {
    "name": "recency_boosted",
    "description": "Custom scoring with date-based decay for freshness",
    "queries": [
      {
        "query": "golang concurrency best practices",
        "description": "Recent content gets higher scores",
        "es_query": {
          "query": {
            "function_score": {
              "query": {
                "multi_match": {
                  "query": "golang concurrency best practices",
                  "fields": ["title^2", "body"],
                  "type": "best_fields"
                }
              },
              "functions": [
                {
                  "gauss": {
                    "date": {
                      "origin": "now",
                      "scale": "365d",
                      "offset": "10d",
                      "decay": 0.33
                    }
                  },
                  "weight": 2
                }
              ],
              "boost_mode": "sum",
              "score_mode": "sum",
              "max_boost": 42
            }
          },
          "size": 20,
          "min_score": 0.1
        }
      },
      {
        "query": "best practices",
        "description": "Common phrase with decay function",
        "es_query": {
          "query": {
            "function_score": {
              "query": {
                "match_phrase": {
                  "body": "best practices"
                }
              },
              "functions": [
                {
                  "gauss": {
                    "date": {
                      "origin": "now",
                      "scale": "90d",
                      "offset": "30d",
                      "decay": 0.5
                    }
                  },
                  "weight": 1.8
                }
              ],
              "boost_mode": "multiply",
              "score_mode": "sum"
            }
          },
          "size": 20
        }
      }
    ]
  },
  {
    "name": "content_type_filtered",
    "description": "Demonstrate filtering and content-type specific ranking",
    "queries": [
      {
        "query": "golang",
        "description": "Articles only (professional content)",
        "es_query": {
          "query": {
            "bool": {
              "must": [
                {
                  "match": {
                    "body": "golang"
                  }
                }
              ],
              "filter": [
                {
                  "term": {
                    "content_type": "article"
                  }
                }
              ]
            }
          },
          "size": 20
        }
      },
      {
        "query": "golang",
        "description": "Tutorials only (learning content)",
        "es_query": {
          "query": {
            "bool": {
              "must": [
                {
                  "match": {
                    "body": "golang"
                  }
                }
              ],
              "filter": [
                {
                  "term": {
                    "content_type": "tutorial"
                  }
                }
              ]
            }
          },
          "size": 20
        }
      }
    ]
  },
  {
    "name": "advanced_hybrid",
    "description": "Advanced hybrid approach combining multiple ranking factors",
    "queries": [
      {
        "query": "golang best practices",
        "description": "Combines title boost, phrase matching, and content type",
        "es_query": {
          "query": {
            "bool": {
              "must": [
                {
                  "multi_match": {
                    "query": "golang best practices",
                    "fields": ["title^3", "body"],
                    "type": "best_fields"
                  }
                }
              ],
              "should": [
                {
                  "match_phrase": {
                    "title": {
                      "query": "golang best practices",
                      "boost": 5
                    }
                  }
                },
                {
                  "term": {
                    "content_type": {
                      "value": "article",
                      "boost": 1.5
                    }
                  }
                }
              ]
            }
          },
          "size": 20
        }
      },
      {
        "query": "microservices architecture",
        "description": "Multi-concept query showing phrase and fuzzy matching",
        "es_query": {
          "query": {
            "bool": {
              "should": [
                {
                  "match_phrase": {
                    "title": {
                      "query": "microservices architecture",
                      "boost": 5
                    }
                  }
                },
                {
                  "multi_match": {
                    "query": "microservices architecture",
                    "fields": ["title^3", "body"],
                    "fuzziness": "AUTO",
                    "boost": 2
                  }
                }
              ],
              "minimum_should_match": 1
            }
          },
          "size": 20
        }
      }
    ]
  }
]